  author = {Yang, Hui and Ciais, Philippe and Wang, Yilong and Huang, Yuanyuan and Wigneron, Jean-Pierre and Bastos, Ana and Chave, J{\'e}r{\^o}me and Chang, Jinfeng and E. Doughty, Christopher and Fan, Lei and Goll, Daniel and Joetzjer, Emilie and Li, Wei and Lucas, Richard and Quegan, Shaun and Le Toan, Thuy and Yu, Kailiang},
