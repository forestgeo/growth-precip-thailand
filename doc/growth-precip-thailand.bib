}

@article{bauman_tropical_2022,
  title = {Tropical Tree Growth Sensitivity to Climate Is Driven by Species Intrinsic Growth Rate and Leaf Traits},
  author = {Bauman, David and Fortunel, Claire and Cernusak, Lucas A. and Bentley, Lisa P. and McMahon, Sean M. and Rifai, Sami W. and Aguirre-Guti{\'e}rrez, Jes{\'u}s and Oliveras, Imma and Bradford, Matt and Laurance, Susan G. W. and Delhaye, Guillaume and Hutchinson, Michael F. and Dempsey, Raymond and McNellis, Brandon E. and Santos-Andrade, Paul~E. and Ninantay-Rivera, Hugo R. and Chambi Paucar, Jimmy R. and Phillips, Oliver L. and Malhi, Yadvinder},
