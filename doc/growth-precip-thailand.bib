@article{phillips_reliance_2003,
  title = {Reliance on Stored Water Increases with Tree Size in Three Species in the {{Pacific Northwest}}},
  author = {Phillips, N. G. and Ryan, M. G. and Bond, B. J. and McDowell, N. G. and Hinckley, T. M. and {\v C}erm{\'a}k, J.},
