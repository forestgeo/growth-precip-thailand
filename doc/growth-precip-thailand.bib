@article{garcía-cervigón_climate_2020,
  title = {Climate Seasonality and Tree Growth Strategies in a Tropical Dry Forest},
  author = {{Garc{\'i}a-Cervig{\'o}n}, Ana I. and Camarero, J. Julio and Cueva, Eduardo and Espinosa, Carlos I. and Escudero, Adri{\'a}n},
