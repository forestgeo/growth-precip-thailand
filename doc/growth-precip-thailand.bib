  author = {Wagner, Fabien and Rossi, Vivien and {Aubry-Kientz}, M{\'e}laine and Bonal, Damien and Dalitz, Helmut and Gliniars, Robert and Stahl, Cl{\'e}ment and Trabucco, Antonio and H{\'e}rault, Bruno},
